<!DOCTYPE html>
<html lang="en">
<head>
  <title><%=Setting.cached.group_name%></title>
  <% if Setting.cached.app_icon? %>
  <link rel="shortcut icon" href="<%=Setting.cached.app_icon_url(:fav_icon)%>">
  <% end %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if is_admin? %>
  <div class="navbar">
    <div class="navbar-inner">
      <a class="brand" id="nav_title" href="#">ADMIN PANEL</a>
      <ul class="nav">
        <%=nav_link("Home", root_path) %>
        <%=nav_link("Roster", families_path) %>
        <%=nav_link("Attendance", attendances_path) %>
        <%=nav_link("Signups", signups_path) %>
        <%=nav_link("Contact Queue", contact_queue_items_path) %>
        <%=nav_link("Podcast", podcasts_path) %>
        <%=nav_link("Reports", '/reports') %>
        <%=nav_link("Settings", '/settings') %>
      </ul>
      <p class="text-right"><%=link_to 'Logout', '/logout' %></p>
    </div>
  </div>
  <% end %>
  <div id="content" class="<%=params[:controller]%> <%= is_admin? ? 'admin' : ''%>">
    <%= yield %>
  </div>
</body>
</html>
