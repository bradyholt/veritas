<% if @podcasts.length > 0 %>
	<h2>Podcast<i class="icon-headphones"></i></h2>
	<ul>
		<% @podcasts.each_with_index do |p, index| %>
		<li id="podcast-item">
			<% if index == 0 && p.is_recent? %>
			<span class="label label-success">New!</span>
			<% end %>
			<a href="<%=podcast_url(p)%>" data-toggle="modal" data-target="#podcast-modal"><%=p.title%></a>
			<div id="podcast-item-detail"><%=p.date.strftime('%B %d, %Y')%> / <%=p.speaker%></div>
		</li>
		<% end %>
	</ul>
	<div id="podcast-modal" class="modal hide fade">
	  <div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	    <h3>Listen to Podcast</h3>
	  </div>
	  <div class="modal-body">
	    <p>Loadingâ€¦</p>
	  </div>
	  <div class="modal-footer">
	   <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
	  </div>
	</div>
	<hr/>
	<% if !Setting.cached.podcast_itunes_url.blank? %>
	<div class="pull-right itunes-link">
	<%= image_tag "itunes.png" %>
	<a target="_blank" href="<%=Setting.cached.podcast_itunes_url%>">iTunes</a>
	</div>
	<% end %>
	<a href="<%=podcast_feed_path%>"><i class="icon-bookmark"></i>Podcast RSS Feed</a> 
<% end %>