<h2>Signups<i class="icon-check"></i></h2>
<% if @signups.length > 0 %>
	<% @signups.each do |s| %>
	<div class="signup" signup_id="<%=s.id%>">
		<div class="title"><%=s.title%></div>
		<% if s.unslotted_count > 0 %>
		<a href="<%=user_signup_path(s)%>" role="button" class="btn btn-success btn-small pull-right" data-toggle="modal" data-target="#signup-modal">Signup</a>
		<% else %>
		<a href="<%=user_signup_path(s)%>" role="button"class="btn btn-small pull-right" data-toggle="modal" data-target="#signup-modal">View</a>
		<% end %>
		<span class="badge badge-warning"><%=s.unslotted_count%></span> slots open		
	</div>
	<% end %>
	<div id="signup-modal" class="modal hide fade">
	  <div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	    <h3>Signup</h3>
	  </div>
	  <div class="modal-body">
	    <p>Loadingâ€¦</p>
	  </div>
	  <div class="modal-footer">
	   <button class="btn btn-primary" id="save-signup" aria-hidden="true">Save</button>
	   <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
	  </div>
	</div>
<% else %>
<div class="alert alert-info">
  No signups are currently available.
</div>
<% end %>
